  <script>
    const yearEl = document.getElementById('year');
    yearEl.textContent = new Date().getFullYear();

    /***********************
     * UTILIDADES GENERALES
     ***********************/
    function scrollToId(id){
      const el = document.getElementById(id);
      if(el){ el.scrollIntoView({behavior:'smooth', block:'start'}); }
    }

    /***********************
     * BACKGROUND CANVAS FX
     ***********************/
    const fx = document.getElementById('fx');
    const ctx = fx.getContext('2d');
    let W, H, DPR = Math.min(2, window.devicePixelRatio || 1);
    let nodes = [];

    function resizeFx(){
      W = fx.width = Math.floor(innerWidth * DPR);
      H = fx.height = Math.floor(innerHeight * DPR);
    }

    function initFx(){
      nodes = Array.from({length: 90}, () => ({
        x: Math.random()*W, y: Math.random()*H,
        vx:(Math.random()-.5)*.3, vy:(Math.random()-.5)*.3,
        r: 1 + Math.random()*2
      }));
    }

    function drawFx(){
      ctx.clearRect(0,0,W,H);
      // fondo sutil
      const grd = ctx.createRadialGradient(W*0.1, H*0.1, 0, W*0.1, H*0.1, Math.max(W,H)*0.9);
      grd.addColorStop(0, 'rgba(0,255,255,0.06)');
      grd.addColorStop(1, 'rgba(0,0,0,0)');
      ctx.fillStyle = grd; ctx.fillRect(0,0,W,H);

      // lÃ­neas y puntos
      for(let i=0;i<nodes.length;i++){
        const a = nodes[i];
        a.x += a.vx; a.y += a.vy;
        if(a.x<0||a.x>W) a.vx*=-1; if(a.y<0||a.y>H) a.vy*=-1;
      }

      for(let i=0;i<nodes.length;i++){
        const a = nodes[i];
        for(let j=i+1;j<nodes.length;j++){
          const b = nodes[j];
          const dx=a.x-b.x, dy=a.y-b.y; const d = Math.hypot(dx,dy);
          if(d<120){
            const o = 1 - d/120; // opacidad
            ctx.strokeStyle = `rgba(0,255,255,${0.11*o})`;
            ctx.lineWidth = o * 1.1;
            ctx.beginPath(); ctx.moveTo(a.x,a.y); ctx.lineTo(b.x,b.y); ctx.stroke();
          }
        }
      }
      for(const p of nodes){
        ctx.fillStyle = 'rgba(255,0,247,0.6)';
        ctx.beginPath(); ctx.arc(p.x, p.y, p.r, 0, Math.PI*2); ctx.fill();
      }
      requestAnimationFrame(drawFx);
    }

    window.addEventListener('resize', ()=>{ resizeFx(); });
    resizeFx(); initFx(); drawFx();

    /***************************
     * HERO CANVAS (DEMO NEON)
     ***************************/
    const hero = document.getElementById('heroCanvas');
    const hctx = hero.getContext('2d');
    const HS = { t:0 };

    function heroDraw(){
      const w = hero.width, h = hero.height;
      hctx.clearRect(0,0,w,h);
      // trama neon
      for(let y=0;y<h;y+=20){
        const hue = (y/2 + HS.t) % 360;
        hctx.strokeStyle = `hsla(${hue}, 100%, 60%, 0.25)`;
        hctx.beginPath();
        for(let x=0;x<w;x+=20){
          const offset = Math.sin((x+HS.t)*0.02)*10;
          hctx.lineTo(x, y + offset);
        }
        hctx.stroke();
      }
      // texto
      hctx.font = '700 48px system-ui, sans-serif';
      hctx.fillStyle = 'rgba(255,255,255,0.85)';
      hctx.fillText('Neon Canvas Demo', 20, h - 28);
      HS.t += 1.6; requestAnimationFrame(heroDraw);
    }
    heroDraw();

    /**********************
     * TIENDA â€” DATA MOCK
     **********************/
    const productos = [
      {
        id:'quispe',
        nombre:'Quispe-Survivor.io',
        desc:'Supervivencia arcade con hordas infinitas, power-ups locos y control tÃ¡ctil perfecto.',
        precio: '9.99',
        badge:'JUEGO ANDROID'
      },
      {
        id:'myth',
        nombre:'Myth Slayer',
        desc:'Caza criaturas mÃ­ticas con combos, forja y progresiÃ³n estilo roguelite para sesiones rÃ¡pidas.',
        precio: '7.99',
        badge:'JUEGO ANDROID'
      },
      {
        id:'simple',
        nombre:'Simple Game',
        desc:'Minimalista, adictivo y pulido. Ideal para benchmark de rendimiento y tutoriales.',
        precio: 'Gratis',
        badge:'DEMO / PLACEHOLDER'
      }
    ];

    const grid = document.getElementById('storeGrid');
    const cartCount = document.getElementById('cartCount');
    let cart = 0;

    function createThumbCanvas(seed){
      const c = document.createElement('canvas');
      c.width = 800; c.height = 400; const cx = c.getContext('2d');
      // fondo gradiente neon
      const g = cx.createLinearGradient(0,0,c.width,c.height);
      g.addColorStop(0, 'rgba(0,255,255,0.25)');
      g.addColorStop(1, 'rgba(255,0,247,0.25)');
      cx.fillStyle = g; cx.fillRect(0,0,c.width,c.height);
      // shapes
      cx.globalCompositeOperation = 'lighter';
      for(let i=0;i<60;i++){
        const x = (Math.sin(i*seed)*.5+.5)*c.width;
        const y = (Math.cos(i*seed)*.5+.5)*c.height;
        cx.fillStyle = `rgba(0,255,255,${Math.random()*0.18+0.05})`;
        cx.beginPath(); cx.arc(x,y, Math.random()*40+10, 0, Math.PI*2); cx.fill();
      }
      cx.globalCompositeOperation = 'source-over';
      // tÃ­tulo fantasma
      cx.font = '700 60px system-ui, sans-serif';
      cx.fillStyle = 'rgba(255,255,255,0.7)';
      cx.fillText('Placeholder', 30, 90);
      return c;
    }

    function makeCard(p){
      const card = document.createElement('article');
      card.className = 'card';
      card.innerHTML = `
        <div class="thumb">
          <div class="scanline"></div>
        </div>
        <div class="card-body">
          <div class="title">${p.nombre} <span class="badge">${p.badge}</span></div>
          <div class="desc">${p.desc}</div>
          <div class="actions">
            <button class="btn" data-id="${p.id}">AÃ±adir al carrito</button>
            <span class="price">${p.precio === 'Gratis' ? 'Gratis' : '$'+p.precio}</span>
          </div>
        </div>`;

      // Canvas miniatura personalizado por item
      const t = createThumbCanvas(p.id.length + p.nombre.length);
      card.querySelector('.thumb').appendChild(t);

      card.querySelector('button').addEventListener('click', ()=>{
        cart++; cartCount.textContent = cart; flashCart();
      });
      return card;
    }

    function flashCart(){
      const btn = document.querySelector('.cart-btn');
      btn.animate([
        { transform:'translateY(0)' },
        { transform:'translateY(-6px)' },
        { transform:'translateY(0)' }
      ], { duration:260, easing:'cubic-bezier(.2,.9,.2,1)' });
    }

    productos.forEach(p => grid.appendChild(makeCard(p)));
  </script>
